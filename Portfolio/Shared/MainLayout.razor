    </div>
</header>



@code{
    [Inject]
    private IJSRuntime JSRuntime { get; set; }

    string floatto = "";
    string fading = "";
    string workexperience = "transform: translateX({100}px); opacity: 0; transition: transform 0.4s ease-in, opacity 0.3s ease-in;";
    private void MoveUp(int distance)
    {
        floatto = $"transform: translateY({-distance}px); transition: transform 0.5s linear;";

        fading = $"transform: translateY({-distance}px); opacity: 0; transition: transform 0.4s ease-out, opacity 0.3s ease-out;";

        workexperience = $"transform: translateX({100}px); opacity: 1; transition: transform 0.4s ease-in, opacity 0.3s ease-in;";
    }

    private void MoveOut(int distance)
    {
        floatto = $"transform: translateY({distance}px); transition: transform 0.5s linear;";

        fading = $"transform: translateY({distance}px); opacity: 1; transition: transform 0.4s ease-in, opacity 0.3s ease-in;";

        workexperience = $"transform: translateX({100}px); opacity: 0; transition: transform 0.4s ease-in, opacity 0.3s ease-in;";
    }

    private async Task OpenDialog()
    {
       
       try
        {
            await JSRuntime.InvokeAsync<object>("open", "https://mail.google.com/mail/?view=cm&to=leoganas.jr@gmail.com");
        }
        catch (Exception)
        {
            
             
        }
    }

}